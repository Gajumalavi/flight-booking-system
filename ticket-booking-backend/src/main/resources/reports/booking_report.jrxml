<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="BookingReport" pageWidth="595" pageHeight="842" columnWidth="535" leftMargin="30" rightMargin="30"
              topMargin="30" bottomMargin="30">
    <property name="ireport.scriptlethandling" value="0"/>
    <property name="ireport.encoding" value="UTF-8"/>
    <import value="net.sf.jasperreports.engine.*"/>
    <import value="java.util.*"/>
    <import value="net.sf.jasperreports.engine.data.*"/>
    
    <style name="tableHeader" forecolor="#000000" backcolor="#CCCCCC" fill="Solid" fontSize="12" isBold="true"/>
    <style name="tableRow" forecolor="#000000" backcolor="#FFFFFF" fontSize="11" isBold="false"/>
    <style name="alternateRow" forecolor="#000000" backcolor="#F0F0F0" fontSize="11" isBold="false"/>
    <style name="title" forecolor="#3366CC" fontSize="20" isBold="true"/>
    <style name="sectionHeader" forecolor="#000000" fontSize="14" isBold="true"/>
    
    <parameter name="reportType" class="java.lang.String"/>
    
    <field name="bookingId" class="java.lang.String"/>
    <field name="customerName" class="java.lang.String"/>
    <field name="flightNumber" class="java.lang.String"/>
    <field name="amount" class="java.math.BigDecimal"/>
    <field name="status" class="java.lang.String"/>
    
    <variable name="totalAmount" class="java.math.BigDecimal" calculation="Sum">
        <variableExpression><![CDATA[$F{amount}]]></variableExpression>
        <initialValueExpression><![CDATA[new java.math.BigDecimal(0)]]></initialValueExpression>
    </variable>
    
    <variable name="rowCount" class="java.lang.Integer" calculation="Count">
        <variableExpression><![CDATA[$F{bookingId}]]></variableExpression>
        <initialValueExpression><![CDATA[new java.lang.Integer(0)]]></initialValueExpression>
    </variable>
    
    <title>
        <band height="100" splitType="Stretch">
            <textField>
                <reportElement style="title" x="0" y="10" width="535" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="22"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{reportType} + " Booking Report"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="60" width="535" height="1"/>
                <graphicElement pen="2Point"/>
            </line>
            <textField pattern="MMMM d, yyyy">
                <reportElement x="0" y="70" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Generated on " + new java.text.SimpleDateFormat("MMMM d, yyyy").format(new java.util.Date())]]></textFieldExpression>
            </textField>
        </band>
    </title>
    
    <columnHeader>
        <band height="40" splitType="Stretch">
            <rectangle>
                <reportElement style="tableHeader" x="0" y="10" width="80" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableHeader" x="80" y="10" width="140" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableHeader" x="220" y="10" width="100" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableHeader" x="320" y="10" width="110" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableHeader" x="430" y="10" width="105" height="30" backcolor="#CCCCCC"/>
            </rectangle>
            
            <staticText>
                <reportElement style="tableHeader" x="0" y="10" width="80" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Booking ID]]></text>
            </staticText>
            <staticText>
                <reportElement style="tableHeader" x="80" y="10" width="140" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Customer]]></text>
            </staticText>
            <staticText>
                <reportElement style="tableHeader" x="220" y="10" width="100" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Flight]]></text>
            </staticText>
            <staticText>
                <reportElement style="tableHeader" x="320" y="10" width="110" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Amount (INR)]]></text>
            </staticText>
            <staticText>
                <reportElement style="tableHeader" x="430" y="10" width="105" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <text><![CDATA[Status]]></text>
            </staticText>
        </band>
    </columnHeader>
    
    <detail>
        <band height="30" splitType="Stretch">
            <printWhenExpression><![CDATA[new Boolean(($V{REPORT_COUNT} % 2) == 0)]]></printWhenExpression>
            <rectangle>
                <reportElement style="tableRow" x="0" y="0" width="80" height="30" backcolor="#FFFFFF"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableRow" x="80" y="0" width="140" height="30" backcolor="#FFFFFF"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableRow" x="220" y="0" width="100" height="30" backcolor="#FFFFFF"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableRow" x="320" y="0" width="110" height="30" backcolor="#FFFFFF"/>
            </rectangle>
            <rectangle>
                <reportElement style="tableRow" x="430" y="0" width="105" height="30" backcolor="#FFFFFF"/>
            </rectangle>
            
            <textField>
                <reportElement style="tableRow" x="5" y="0" width="75" height="30"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{bookingId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="tableRow" x="85" y="0" width="135" height="30"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{customerName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="tableRow" x="225" y="0" width="95" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{flightNumber}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="tableRow" x="325" y="0" width="105" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA["INR " + new java.text.DecimalFormat("#,##0.00").format($F{amount})]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="tableRow" x="435" y="0" width="95" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
        </band>
        
        <band height="30" splitType="Stretch">
            <printWhenExpression><![CDATA[new Boolean(($V{REPORT_COUNT} % 2) != 0)]]></printWhenExpression>
            <rectangle>
                <reportElement style="alternateRow" x="0" y="0" width="80" height="30" backcolor="#F0F0F0"/>
            </rectangle>
            <rectangle>
                <reportElement style="alternateRow" x="80" y="0" width="140" height="30" backcolor="#F0F0F0"/>
            </rectangle>
            <rectangle>
                <reportElement style="alternateRow" x="220" y="0" width="100" height="30" backcolor="#F0F0F0"/>
            </rectangle>
            <rectangle>
                <reportElement style="alternateRow" x="320" y="0" width="110" height="30" backcolor="#F0F0F0"/>
            </rectangle>
            <rectangle>
                <reportElement style="alternateRow" x="430" y="0" width="105" height="30" backcolor="#F0F0F0"/>
            </rectangle>
            
            <textField>
                <reportElement style="alternateRow" x="5" y="0" width="75" height="30"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{bookingId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="alternateRow" x="85" y="0" width="135" height="30"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{customerName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="alternateRow" x="225" y="0" width="95" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{flightNumber}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="alternateRow" x="325" y="0" width="105" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA["INR " + new java.text.DecimalFormat("#,##0.00").format($F{amount})]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement style="alternateRow" x="435" y="0" width="95" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <pageFooter>
        <band height="30">
            <textField>
                <reportElement x="0" y="10" width="535" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER} + " of " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
    
    <summary>
        <band height="60" splitType="Stretch">
            <rectangle>
                <reportElement x="0" y="10" width="535" height="1"/>
                <graphicElement pen="Thin"/>
            </rectangle>
            
            <staticText>
                <reportElement style="tableHeader" x="0" y="20" width="320" height="25"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <text><![CDATA[TOTAL AMOUNT:]]></text>
            </staticText>
            
            <textField>
                <reportElement style="tableHeader" x="320" y="20" width="110" height="25"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font isBold="true"/>
                    <paragraph rightIndent="10"/>
                </textElement>
                <textFieldExpression><![CDATA["INR " + new java.text.DecimalFormat("#,##0.00").format($V{totalAmount})]]></textFieldExpression>
            </textField>
            
            <textField>
                <reportElement x="430" y="20" width="105" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{rowCount} + " Record(s)"]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport> 